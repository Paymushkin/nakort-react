doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    
    // SEO Meta Tags
    title NAKORT - Теннисный клуб | Профессиональные корты, тренировки и турниры
    meta(name="description" content="NAKORT — теннисный клуб с профессиональными кортами, тренировками и турнирами. Запишитесь на тренировку по теннису или паделу.")
    meta(name="keywords" content="теннис, падел, корты, тренировки, турниры, спорт, теннисный клуб, NAKORT")
    meta(name="author" content="NAKORT")
    meta(name="robots" content="index, follow")
    link(rel="canonical" href="https://nakort.ru/")
    
    // Open Graph / Facebook
    meta(property="og:type" content="website")
    meta(property="og:url" content="https://nakort.ru/")
    meta(property="og:title" content="NAKORT - Теннисный клуб | Профессиональные корты")
    meta(property="og:description" content="NAKORT — комьюнити людей, увлеченных большим теннисом и яркой жизнью. Профессиональные корты, тренировки и турниры.")
    meta(property="og:image" content="https://nakort.ru/img/og-image.webp")
    meta(property="og:image:width" content="1200")
    meta(property="og:image:height" content="630")
    meta(property="og:locale" content="ru_RU")
    meta(property="og:site_name" content="NAKORT")
    
    // Twitter Card
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:title" content="NAKORT - Теннисный клуб")
    meta(name="twitter:description" content="NAKORT — комьюнити людей, увлеченных большим теннисом и яркой жизнью.")
    meta(name="twitter:image" content="https://nakort.ru/img/og-image.webp")
    
    // Favicon
    link(rel="icon" type="image/svg+xml" href="favicon.svg")
    link(rel="manifest" href="site.webmanifest")
    
    // Performance Optimizations - Resource Hints
    link(rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin)
    link(rel="dns-prefetch" href="https://cdn.jsdelivr.net")
    
    // Preload критичных ресурсов
    link(rel="preload" href="css/main.css" as="style")
    // Шрифты загружаются через CSS @font-face, preload не нужен
    
    // Critical CSS (inline или preload)
    link(rel="stylesheet" href="css/main.css")
    
    // Swiper CSS (локальный файл)
    link(rel="stylesheet" href="css/swiper.min.css")
  body
    .wrapper
        include includes/header

        main.main
          include includes/hero
          include includes/activities
          include includes/about
          include includes/highlight
          include includes/features
          include includes/application
          include includes/reviews
          include includes/pricing
          include includes/certificates
          include includes/promo
          include includes/faq
          
        include includes/footer

    include includes/modal-training
    include includes/modal-certificate
    include includes/desktop-only

    // Structured Data (JSON-LD) для SEO
    script(type="application/ld+json").
      {
        "@context": "https://schema.org",
        "@type": "SportsActivityLocation",
        "name": "NAKORT",
        "description": "Теннисный клуб с профессиональными кортами, тренировками и турнирами",
        "url": "https://nakort.ru",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "RU"
        },
        "sport": ["Tennis", "Padel"],
        "offers": {
          "@type": "Offer",
          "priceCurrency": "RUB"
        }
      }
    
    // Swiper JS (локальный файл, загружается перед main.js)
    script(src="js/swiper.min.js" defer)
    script(src="js/main.js" defer)